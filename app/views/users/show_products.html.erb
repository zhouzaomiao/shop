<div class="big_category">
      <h3>购买商品清单：</h3>
    </div>
    <div class="m" id="purchaselist" align="center" >
      <table width="90%" border="1" cellpadding="0" cellspacing="0">
        <tr class="listtitle">
          <th scope="col">商品名称</th>
          <th scope="col">单价</th>
          <th scope="col">数量</th>
          <th scope="col">操作</th>
        </tr>
        <% @shopping_carts.each do |f| %>
        <tr>
          <td ><span><%= link_to "#{f.product.name}", :controller => :products, :action => "show", :id => f.product_id %></span></td>
          <td><span >¥<%= f.purchase_price %></span></td>
          <td><span ><%= f.quantity %></span></td>
          <td><span ><%= link_to "管理评论", comment_manage_users_path(:id => f.product_id) %></span></td>
        </tr>
        <% end %>
      </table>
    </div>