
<table cellspacing="0" cellpadding="0" bordercolor="#778899" border="1" align="center">
  <td><h1>创建新用户</h1></td>
  <%= form_for @user,:url => admin_admins_path do |f| %>
    <%= render :partial => "/common/error_message", :locals => {:obj => @user} %>
    <tr>
    <div class="field">
      <td align="center"><%= f.label :用户名 %></td>
      <td><%= f.text_field :login %></td>
    </div>
  </tr>
  <tr>
  <div class="field">
    <td align="center"><%= f.label :邮箱 %></td>
    <td><%= f.text_field :email %></td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <td align="center"><%= f.label :密码 %></td>
    <td><%= f.password_field :password %></td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <td align="center"><%= f.label :确认密码 %></td>
    <td><%= f.password_field :password_confirmation %></td>
  </div>
  </tr>
  <tr>
  <div class="actions">
    <td><%= f.submit %></td>

    <td><%= link_to '返回', user_list_admin_admins_url %></td>
  </div>
  </tr>
<% end %>    
</table>