
<div >

  <!--m begin-->
  <div class="m" id="allsort">
    <div class="mt">
      <h2>账单详情</h2>
    </div>

    <div class="big_category">
      <h3>订货信息</h3>

      <div class="item">
        <span>
          <ins>
              收件人：<%= @address.name %>
          </ins>
        </span>
      </div>
      <div class="item">
        <span>
          <ins>
		电&nbsp;话：<%= @address.tel %>
          </ins>
        </span>
      </div>
      <div class="item">
        <span>
          <ins>
              地&nbsp;址: <%= @address.address%>
          </ins>
        </span>
      </div>
    </div>
    <div class="big_category">
      <h3>商品清单</h3>
    </div>
    <div class="m" id="purchaselist" align="center" >
      <table width="90%" border="1" cellpadding="0" cellspacing="0">
        <tr class="listtitle">
          <th scope="col">商品名称</th>
          <th scope="col">单价</th>
          <th scope="col">数量</th>

        </tr>
        <% @shopping_carts.each do |f| %>
        <tr>
          <td ><span><%= link_to "#{f.product.name}", :controller => :products, :action => "show", :id => f.product_id %></span></td>
          <td><span >¥<%= f.purchase_price %></span></td>
          <td><span ><%= f.quantity %></span></td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>
  <!--m end-->
</div>